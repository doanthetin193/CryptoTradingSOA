# Market Service Environment Variables
PORT=3002
NODE_ENV=development
SERVICE_NAME=market-service

# CoinGecko API Configuration
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_API_KEY=
# Leave empty for free tier, add key if you have pro plan

# Cache Configuration (seconds)
CACHE_TTL_PRICES=30
CACHE_TTL_CHART=300
CACHE_TTL_COIN_LIST=3600

# Supported Coins (comma separated coin IDs from CoinGecko)
SUPPORTED_COINS=bitcoin,ethereum,binancecoin,solana,ripple,cardano,dogecoin,polkadot

# Consul Configuration
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Log Level
LOG_LEVEL=info
