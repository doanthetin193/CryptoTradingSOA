# API Gateway Environment Variables
PORT=3000
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production_2025

# Consul Configuration
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Service Names (for Consul discovery)
USER_SERVICE_NAME=user-service
MARKET_SERVICE_NAME=market-service
PORTFOLIO_SERVICE_NAME=portfolio-service
TRADE_SERVICE_NAME=trade-service
NOTIFICATION_SERVICE_NAME=notification-service

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Log Level
LOG_LEVEL=info
SERVICE_NAME=api-gateway
