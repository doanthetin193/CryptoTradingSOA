{
  "name": "crypto-trading-backend",
  "version": "1.0.0",
  "description": "Backend for Crypto Trading SOA",
  "scripts": {
    "start:user": "cd services/user-service && npm start",
    "start:market": "cd services/market-service && npm start",
    "start:portfolio": "cd services/portfolio-service && npm start",
    "start:trade": "cd services/trade-service && npm start",
    "start:notification": "cd services/notification-service && npm start",
    "start:gateway": "cd api-gateway && npm start",
    "start:all": "concurrently \"npm run start:user\" \"npm run start:market\" \"npm run start:portfolio\" \"npm run start:trade\" \"npm run start:notification\" \"npm run start:gateway\"",
    "dev": "npm run start:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "mongoose": "^8.19.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
